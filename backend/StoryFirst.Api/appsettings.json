{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.Authentication": "Debug",
      "Microsoft.IdentityModel": "Debug"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=db;Database=storyfirst;Username=postgres;Password=postgres"
  },
  "Authentication": {
    "Keycloak": {
      "Authority": "http://localhost:8180/realms/storyfirst",
      "Audience": "storyfirst-api",
      "MetadataAddress": "http://keycloak:8080/realms/storyfirst/.well-known/openid-configuration",
      "InternalUrl": "http://keycloak:8080",
      "ValidIssuers": [
        "http://localhost:8180/realms/storyfirst",
        "http://keycloak:8080/realms/storyfirst",
        "http://localhost:8080/realms/storyfirst"
      ],
      "RequireHttpsMetadata": false,
      "ValidateIssuer": true,
      "ValidateAudience": true,
      "ValidateLifetime": true
    }
  }
}
